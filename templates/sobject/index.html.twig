{% extends 'base.html.twig' %}

{% block title %}Sobject index{% endblock %}

{% block body %}
    <h1>Sobject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created</th>
                <th>TextContent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sobject in sobjects %}
            <tr>
                <td>{{ sobject.id }}</td>
                <td>{{ sobject.name }}</td>
                <td>{{ sobject.created ? sobject.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sobject.textContent }}</td>
                <td>
                    <a href="{{ path('app_sobject_show', {'id': sobject.id}) }}">show</a>
                    <a href="{{ path('app_sobject_edit', {'id': sobject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sobject_new') }}">Create new</a>
{% endblock %}
